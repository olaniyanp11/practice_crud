<%- include('header') %> <% if (message !== "") { %>
<div class="alert alert-<%= message.type %> alert-dismissible">
  <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
  <strong><%= message.type %></strong> <%= message.message %>
</div>
<% } %>
<p class="h1">Update <%= curuser.name %> form</p>
<form id="form" method="post" enctype="multipart/form-data" action="/update">
  <div class="form-group">
    <input
      type="hidden"
      class="form-control"
      name="id"
      id="exampleInputName1"
      value="<%=curuser._id %>"
    />
  </div>
  <div class="form-group">
    <label for="name">fullname</label>
    <input
      type="text"
      class="form-control"
      name="name"
      id="exampleInputName1"
      value="<%=curuser.name %>"
    />
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input
      type="email"
      class="form-control"
      value="<%=curuser.email %>"
      name="email"
      id="exampleInputEmail1"
      aria-describedby="emailHelp"
      placeholder="Enter email"
    />
    <small id="emailHelp" class="form-text text-muted"
      >We'll never share your email with anyone else.</small
    >
  </div>
  <div class="form-check">
    <input
      class="form-radio-input"
      name="gender"
      type="radio"
      value="male"
      id="flexCheckDefault"
    />
    <label class="form-check-label" for="flexCheckDefault"> Male </label>
  </div>
  <div class="form-check">
    <input
      name="gender"
      class="form-radio-input"
      type="radio"
      value="Female"
      id="flexCheckDefault"
    />
    <label class="form-check-label" for="flexCheckDefault"> Female </label>
  </div>
  <div class="form-file">
    <!-- <label class="form-label" for="customFile">input picture</label> -->
    <div class="mb-3">
      <label for="customFile" class="form-label"
      >Choose a new profile picture:</label
      >
      <input type="file" name="image" class="form-control" id="customFile" />
      <img
        src="<%= curuser.profilePicture %>"
        width="300px"
        alt="Current Profile Picture"
      />
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
<%- include('footer')%>
